<p id="notice"><%= notice %> </p>

<h1>Posts</h1>

<ul>
  <% @posts.each do |post| %>
    <li>
      <%= post.title %>
      <%= post.body %>
      <% if user_signed_in? %>
        <p> Author: <%= post.user.name %> </p>
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to 'New Post', new_posts_path %>
